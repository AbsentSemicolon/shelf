{
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "buckets": {
            "type": "object",
            "patternProperties": {
                ".*": {
                    "$ref": "#/$types/credentials",
                    "description": "Each of these should be keyed by the name of the bucket"
                }
            }
        },
        "elasticsearch": {
            "type": "object",
            "additionalProperties": false,
            "extends": {
                "$ref": "#/$types/credentials"
            },
            "properties": {
                "connectionString": {
                    "type": "string",
                    "pattern": "/^(https?:\/\/)?([\da-z\.-]+)\.([a-z\.]{2,6})([\/\w \.-]*)*\/?$/",
                    "description": "How to connect to the index we wish to use for elastic search.  For example: http://localhost:9200/metadata"
                },
                "region": {
                    "type": "string",
                    "enum": [
                        "ap-northeast-1",
                        "ap-northeast-2",
                        "ap-southeast-1",
                        "ap-southeast-2",
                        "eu-central-1",
                        "eu-west-1",
                        "sa-east-1",
                        "us-east-1",
                        "us-west-1",
                        "us-west-2"
                    ]
                }
            }
        }
 
    },
    "required": [
        "name",
        "value"
    ],
    "$types": {
        "credentials": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "accessKey": {
                    "type": "string"
                },
                "secretKey": {
                    "type": "string"
                }
            }
        }
    },
    "$schema": "http://json-schema.org/draft-04/schema#"
}
