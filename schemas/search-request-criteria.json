{
    "type": "object",
    "decsription": "Request criteria for searching artifact metadata, sorting the results, and limiting the number of results returned.",
    "properties": {
        "search": {
            "oneOf": [
                {
                    "type": "array",
                    "description": "List of search strings. Requires an equals without preceding backslash.",
                    "items": {
                        "type": "string",
                        "pattern": "(?<!\\\\)="
                    }
                },
                {
                    "type": "string",
                    "pattern": "(?<!\\\\)="
                }
            ]
        },
        "sort": {
            "oneOf": [
                {
                    "type": "array",
                    "description": "List of sort strings. String requires atleast",
                    "items": {
                        "type": "string",
                        "pattern": "(?i)^[\\w\\s]+(?:,\\s(DESC|DESCENDING|ASC|ASCENDING|VERSION|VER)*)*$"
                    }
                },
                {
                    "type": "string",
                    "pattern": "(?i)^[\\w\\s]+(?:,\\s(DESC|DESCENDING|ASC|ASCENDING|VERSION|VER)*)*$"
                }
            ]
        },
        "limit": {
            "type": "integer"
        }
    },
    "required": [
        "search"
    ],
    "$schema": "http://json-schema.org/draft-04/schema#"
}
